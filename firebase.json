{
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "hosting": {
      "host": "127.0.0.1",
      "port": "4873"
    },
    "database": {
      "host": "127.0.0.1",
      "port": "4874"
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    }
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
